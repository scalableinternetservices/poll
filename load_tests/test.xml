<?xml version="1.0"?>
<!-- Using tsung on AWS 
<!DOCTYPE tsung SYSTEM "/home/ec2-user/opt/tsung-1.5.0/share/tsung/tsung-1.0.dtd"> 
-->
<!-- Using tsung on local mac with homebrew install -->
<!DOCTYPE tsung SYSTEM "/usr/local/Cellar/tsung/1.6.0/share/tsung/tsung-1.0.dtd">
<tsung loglevel="notice" version="1.0">

  <!-- Client side setup -->
  <clients>
    <client host="localhost" use_controller_vm="true" maxusers='15000'/>
  </clients>

  <!-- Server side setup -->
  <servers>
    <server host="ec2-52-33-185-231.us-west-2.compute.amazonaws.com" port="80" type="tcp"></server>
  </servers>

  <load>
    <arrivalphase phase="1" duration="30" unit="second">
      <users arrivalrate="1" unit="second"></users>
    </arrivalphase>
<!-- Server side setup
    <arrivalphase phase="2" duration="30" unit="second">
      <users arrivalrate="2" unit="second"></users>
    </arrivalphase>
    <arrivalphase phase="3" duration="30" unit="second">
      <users arrivalrate="4" unit="second"></users>
    </arrivalphase>
 --> 
  </load>

  <options>
    <!-- Set connection timeout to 2 seconds -->
    <option name="global_ack_timeout" value="2000"></option>

    <option type="ts_http" name="user_agent">
      <user_agent probability="100">Mozilla/5.0 (Windows; U; Windows NT 5.2; fr-FR; rv:1.7.8) Gecko/20050511 Firefox/1.0.4</user_agent>
    </option>
  </options>

  <sessions>
    <session name="http-example" probability="100" type="ts_http">

      <!-- Get CSRF Token for creating new user -->
      <request>
        <dyn_variable name="authenticity_token"/>
        <http url="/users/sign_up" version="1.1" method="GET"/>
      </request>

      <!-- Escape CSRF Token -->
      <setdynvars sourcetype="eval" code="fun({Pid,DynVars})->       {ok, Val} = ts_dynvars:lookup(authenticity_token, DynVars),       list_to_binary(http_uri:encode(binary_to_list(Val)))       end.">
      <var name="escaped_authenticity_token"/>
      </setdynvars>

      <!-- Get a random number for new user to create -->
      <setdynvars sourcetype="random_number" start="1000" end="9999999">
        <var name="random_user_num" />
      </setdynvars>
      
      <!-- Create a new user  -->
      <request subst="true">
        <http
              url='/users'
              version='1.1'
              contents='authenticity_token=%%_escaped_authenticity_token%%&amp;&amp;user%5Bfirst_name%5D=Pollster%%_random_user_num%%&amp;user%5Blast_name%5D=Pollster%%_random_user_num%%&amp;user%5Bemail%5D=pollster%%_random_user_num%%%40pollster.com&amp;user%5Bpassword%5D=pollster%%_random_user_num%%&amp;user%5Bpassword_confirmation%5D=pollster%%_random_user_num%%&amp;commit=Sign+up'
              content_type="application/x-www-form-urlencoded" method="POST">              
        </http>
      </request>


<!--
       Login as user  
      <request subst="true">
        <http
              url='/users/sign_in'
              version='1.1'
              contents='authenticity_token=%%_escaped_authenticity_token%%&amp;user%5Bemail%5D=pollster%40pollster.com&amp;user%5Bpassword%5D=pollster&amp;user%5Bremember_me%5D=0&amp;commit=Log+in'
              content_type="application/x-www-form-urlencoded" method="POST">              
        </http>
      </request>
-->
      
      <!-- wait for up to 2 seconds, user is looking at polls -->
      <thinktime value="2" random="true"></thinktime>


      <!-- Get CSRF Token for creating new poll  -->
      <request>
        <dyn_variable name="authenticity_token"/>
        <http url="/user_polls/new" version="1.1" method="GET"/>
      </request>

      <!-- Escape CSRF Token -->
      <setdynvars sourcetype="eval" code="fun({Pid,DynVars})->       {ok, Val} = ts_dynvars:lookup(authenticity_token, DynVars),       list_to_binary(http_uri:encode(binary_to_list(Val)))       end.">
      <var name="escaped_authenticity_token"/>
      </setdynvars>

      <!-- Create new poll -->
      <request subst="true">
      	<dyn_variable name="created_poll_url" re="[Ll]ocation: (http://.*)\r"/>
      	<dyn_variable name="created_poll_id" re="[Ll]ocation: http://.*/user_polls/(.*)\r"/>
        <http
              url='/user_polls'
              version='1.1'
              contents='utf8=%E2%9C%93&amp;authenticity_token=%%_escaped_authenticity_token%%&amp;user_poll%5Btitle%5D=poll%%_random_user_num%%&amp;user_poll%5Bdescription%5D=poll%%_random_user_num%%&amp;user_poll%5Bpoll_questions_attributes%5D%5B0%5D%5Btext%5D=is+poll%%_random_user_num%%+awesome%3F&amp;user_poll%5Bpoll_questions_attributes%5D%5B0%5D%5Banswers_attributes%5D%5B0%5D%5Btext%5D=yes&amp;user_poll%5Bpoll_questions_attributes%5D%5B0%5D%5Banswers_attributes%5D%5B1%5D%5Btext%5D=no&amp;user_poll%5Bpoll_questions_attributes%5D%5B0%5D%5Banswers_attributes%5D%5B2%5D%5Btext%5D=&amp;user_poll%5Bpoll_questions_attributes%5D%5B0%5D%5Banswers_attributes%5D%5B3%5D%5Btext%5D=&amp;user_poll%5Bpoll_questions_attributes%5D%5B0%5D%5Boptional%5D=0&amp;user_poll%5Bpoll_questions_attributes%5D%5B0%5D%5Ballow_multiple_answers%5D=0&amp;commit=Create+User+poll'
              content_type="application/x-www-form-urlencoded" method="POST">              
        </http>
      </request>

      <!-- View the poll -->
      <request subst="true">
      	<dyn_variable name="option1_num"
      	              re='"/results/test/(.*)"'/>
        <http url="/user_polls/%%_created_poll_id%%" version="1.1" method="GET"/>
      </request>

      <!-- Vote on the poll -->
      <request subst="true">
        <http url="/results/test/%%_option1_num%%" version="1.1" method="GET"/>
      </request>

      <!-- View the results of the poll -->
      <request subst="true">
        <http url="/user_polls/%%_created_poll_id%%/results" version="1.1" method="GET"/>
      </request>

      <!-- Get CSRF Token for deleting the poll  -->
      <request>
      	<dyn_variable name="authenticity_token3"
      	              re='"csrf-token" content="(.*)"'/>
      	<http url="/" version="1.1" method="GET"/>
      </request>

      <!-- Escape CSRF Token -->
      <setdynvars sourcetype="eval" code="fun({Pid,DynVars})->       {ok, Val} = ts_dynvars:lookup(authenticity_token3, DynVars),       list_to_binary(http_uri:encode(binary_to_list(Val)))       end.">
      <var name="escaped_authenticity_token3"/>
      </setdynvars>

      <!-- Delete the poll -->
      <request subst="true">
      	<http
      	      url='/user_polls/%%_created_poll_id%%'
      	      version='1.1'
      	      contents='_method=delete&amp;authenticity_token=%%_escaped_authenticity_token3%%'
      	      content_type="application/x-www-form-urlencoded" method="POST">              
      	</http>
      </request>

      <!-- Get CSRF Token for signing the user out  -->
      <request>
      	<dyn_variable name="authenticity_token5"
      	              re='"csrf-token" content="(.*)"'/>
      	<http url="/" version="1.1" method="GET"/>
      </request>

      <!-- Escape CSRF Token -->
      <setdynvars sourcetype="eval" code="fun({Pid,DynVars})->       {ok, Val} = ts_dynvars:lookup(authenticity_token5, DynVars),       list_to_binary(http_uri:encode(binary_to_list(Val)))       end.">
      <var name="escaped_authenticity_token5"/>
      </setdynvars>

      <!-- Log out of the user -->
      <request subst="true">
      	<http
      	      url='/users/sign_out'
      	      version='1.1'
      	      contents='authenticity_token=%%_escaped_authenticity_token5%%'
      	      content_type="application/x-www-form-urlencoded" method="DELETE">              
      	</http>
      </request>    

      <!-- Get CSRF Token for logging in as the user -->
      <request>
        <dyn_variable name="authenticity_token"/>
        <http url="/users/sign_in" version="1.1" method="GET"/>
      </request>

      <!-- Escape CSRF Token -->
      <setdynvars sourcetype="eval" code="fun({Pid,DynVars})->       {ok, Val} = ts_dynvars:lookup(authenticity_token, DynVars),       list_to_binary(http_uri:encode(binary_to_list(Val)))       end.">
      <var name="escaped_authenticity_token"/>
      </setdynvars>

      <!-- Log in as the user --> 
      <request subst="true">
        <http
              url='/users/sign_in'
              version='1.1'
              contents='authenticity_token=%%_escaped_authenticity_token%%&amp;user%5Bemail%5D=pollster%%_random_user_num%%%40pollster.com&amp;user%5Bpassword%5D=pollster%%_random_user_num%%&amp;user%5Bremember_me%5D=0&amp;commit=Log+in'
              content_type="application/x-www-form-urlencoded" method="POST">              
        </http>
      </request>

      <!-- Get CSRF Token for deleting the user -->
      <request>
        <dyn_variable name="authenticity_token"/>
        <http url="/users/edit" version="1.1" method="GET"/>
      </request>

      <!-- Escape CSRF Token -->
      <setdynvars sourcetype="eval" code="fun({Pid,DynVars})->       {ok, Val} = ts_dynvars:lookup(authenticity_token, DynVars),       list_to_binary(http_uri:encode(binary_to_list(Val)))       end.">
      <var name="escaped_authenticity_token"/>
      </setdynvars>

      <!-- Delete the user -->      
      <request subst="true">
        <http
              url='/users'
              version='1.1'
              contents='_method=delete&amp;authenticity_token=%%_escaped_authenticity_token%%'
              content_type="application/x-www-form-urlencoded" method="POST">              
        </http>
      </request>  
    </session>
  </sessions>
 </tsung>