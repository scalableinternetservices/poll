<div class="container">
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2">
      <div class="row">
        <p id="notice"><%= notice %></p>
        <h1>Thanks for voting!</h1>
      </div>

      <div class="row">
        <h3>Results</h3>
        <%= render "poll_results" %>
      </div>

      <div class="row">
        <h3>Any thoughts? Leave a comment below!</h3>
        <%= form_for([@user_poll, @user_poll.comments.build]) do |f| %>
          <p>
            <%= f.label :body %> <br/>
            <%= f.text_area :body %>
          </p>
          <p>
            <%= f.submit %>
          </p>
        <% end %>
      </div>

      <div class="row">
        <% @user_poll.comments.each do |comment| %>
          <p><%= comment.commenter %></p><br>
          <p><%= comment.body %></p>
        <% end %>
      </div>
    </div>
  </div>

  <%= link_to 'Back', root_path %>
</div>
