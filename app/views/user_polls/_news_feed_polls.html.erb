<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Poll Owner</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @news_feed_polls.each do |user_poll| %>
      <tr>
        <td><%= user_poll.title %></td>
        <td><%= user_poll.description %></td>
        <td><%= User.find(user_poll.user_id).email %></td>
        <td><%= link_to 'Show', user_poll %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if @can_show_more_news_feed_polls %>
  <button data-news-feed-polls-request-size=<%= "#{@next_news_feed_polls_request_size}" %>>Show more</button>
<% end %>
