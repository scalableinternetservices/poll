<div class="row">
  <% @user_poll.poll_questions.each_with_index do |poll_question, index| %>
      <%= image_tag poll_question.poll_question_picture.url(:thumb) %><br/><br/>
      <h4><%= "Question " + "#{index+1}: "+ poll_question.text %></h4>
      <div class="container">
          <div id=<%= "chart"+"#{index+1}"%> data-sort="false" data-width="400" class="jChart chart-lg WhiteText">
              <% poll_question.answers.each do |answer| %>
                  <% answer.results.each do |result| %>
                      <div class="define-chart-row" data-color="#84d6ff" title=<%= answer.text %>><%=result.votes%></div>
                  <% end %>
              <% end %>
          </div>
      </div>
  <% end %>
</div>

<script>
        $(document).ready(function() {
            var no_polls = '<%= @user_poll.poll_questions.length %>';
            for (i = 1; i <= no_polls; i++) { 
                $("#chart"+i).jChart({x_label:"Population",width:400});
            }
            $("#colors_chart").jChart();
        });
</script>