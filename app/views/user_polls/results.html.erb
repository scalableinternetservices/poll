<div class="container">
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2">
      <div class="row">
        <p id="notice"><%= notice %></p>
        <h1>
          <strong>Title:</strong>
          <%= @user_poll.title %>
        </h1>
        
        <h3>
          <%= image_tag @user_poll.poll_picture.url(:medium) %><br /><br />
          <strong>Description:</strong>
          <%= @user_poll.description %>
        </h3>
      </div>

      <div class="row">
        <h3><strong>Current Poll Results:</strong></h3>
        <%= render "poll_results" %>
      </div>

      <div class="row">
        <p><%= link_to 'Back', root_path %></p>
      </div>
    </div>
  </div>
</div>
