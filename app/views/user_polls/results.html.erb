<%= render partial: "shared/navbar" %>
<br>
<div class="container">
  <div class="row">
    <div class="col-lg-6 col-lg-offset-3">
      <div class="row CenterWhiteText">
        <p id="notice"><%= notice %></p>
        <h1>
          <strong>Results for</strong>
          <%= @user_poll.title %>
        </h1>
        <h3 class="CenterLightGreyText">
          <%= image_tag @user_poll.poll_picture.url(:medium) %><br /><br />
          <%= @user_poll.description %>
        </h3>
      </div>
      <div class="row">
        <%= render "poll_results" %>
      </div>
      <div class="row">
        <div class="col-lg-6 col-lg-offset-3 CenterWhiteText">
            <% @user_poll.comments.each do |comment| %>
                <% a = comment.commenter %>
                <% if !a.blank? %>
                    <p><strong><%= comment.commenter %> says</strong></p>
                    <p><i><%= comment.body %></i></p>
                    <br>
                <% end %>
            <% end %>
        </div>
      </div>
      <div class="row">
          <div class="col-xs-4 col-xs-offset-4">
              <p><%= link_to " Back Home", :back, {:style=>'color:#FFFFFF;', :class => "btn btn-primary Btn-White center-block"}%></p><br>
          </div>
      </div>
    </div>
  </div>
</div>
