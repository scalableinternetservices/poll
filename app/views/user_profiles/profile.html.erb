<%= render partial: "shared/navbar" %>
<div class="container MainBG">
    <br><br><br>
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
              <h1><%= "#{@profile_user.first_name} #{@profile_user.last_name}" %></h1>
              <%= image_tag @profile_user.profile_picture.url(:large) %>
        </div>
    </div>
    <div class="row">
        <div class="col-md-2 col-md-offset-3">
          <h4>Followers</h4>
          <h6 style="color:#fff;"><%=@user_friends.length%></h6>
          <%= image_tag "Followers.png", :class => 'img-responsive center-block' %>
        </div>
        <div class="col-md-2">
          <h4>Following</h4>
          <h6 style="color:#fff;"><%=@user_friends.length%></h6></h6>
          <%= image_tag "Following.png", :class => 'img-responsive center-block' %>
        </div>
        <div class="col-md-2">
          <h4>Polls</h4>
          <h6 style="color:#fff;"><%=@created_polls.length%></h6>
          <%= image_tag "Polls.png", :class => 'img-responsive center-block' %>
        </div>
    </div>
</div>
    

<div class="container">
  <div class="row">
    <br><h3 style="color:#fff;">My Polls</h3><br>
    <div class="col-md-4 col-md-offset-2">
       <% @counter = 0 %>
       <% @created_polls.each do |user_poll| %>
          <% if @counter % 2 == 0 %>
              <div class="thumbnail"  style="background-color: #000;">
                  <%= image_tag "login_bg.jpg", :class => 'img-responsive center-block' %>
                  <div class="caption">
                    <h3><%= link_to user_poll.title, vote_on_poll_path(user_poll.id), {:style=>'color:#FFF;'}%></h3>
                    <%= link_to user_poll_results_path(user_poll.id), {:style=>'color:#FFF;', class: "btn btn-primary"} do %>
                      <span class="glyphicon glyphicon-stats" aria-hidden="true"</span>  Results
                    <% end %>
                    <%= button_tag type: "button", class: "btn btn-primary", data: {toggle: "modal", target: "#share-modal", poll_id: user_poll.id} do %>
                      <span class="glyphicon glyphicon-share" aria-hidden="true"></span>   Share
                    <% end %>
                  </div>
              </div>
          <% end %>
          <% @counter += 1 %>
        <% end %>
    </div>
    <div class="col-md-4 col-md-offset-1">
       <% @counter = 1 %>
       <% @created_polls.each do |user_poll| %>
          <% if @counter % 2 == 0 %>
              <div class="thumbnail"  style="background-color: #000;">
                  <%= image_tag "login_bg.jpg", :class => 'img-responsive center-block' %>
                  <div class="caption">
                    <h3><%= link_to user_poll.title, vote_on_poll_path(user_poll.id), {:style=>'color:#FFF;'}%></h3>
                    <%= link_to user_poll_results_path(user_poll.id), {:style=>'color:#FFF;', class: "btn btn-primary"} do %>
                      <span class="glyphicon glyphicon-stats" aria-hidden="true"</span>  Results
                    <% end %>
                    <%= button_tag type: "button", class: "btn btn-primary", data: {toggle: "modal", target: "#share-modal", poll_id: user_poll.id} do %>
                      <span class="glyphicon glyphicon-share" aria-hidden="true"></span>   Share
                    <% end %>
                  </div>
              </div>
          <% end %>
          <% @counter += 1 %>
        <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <h3>Polls voted on</h3>
      <table class="table table-striped">
        <tbody>
          <% @voted_polls.each do |user_poll| %>
            <tr>
              <td><%= link_to user_poll.title, vote_on_poll_path(user_poll.id) %></td>
              <td><%= link_to user_poll_results_path(user_poll.id), class: "btn btn-primary btn-xs" do %>
                <span class="glyphicon glyphicon-stats" aria-hidden="true"</span>  Results
              <% end %></td>
              <td><%= button_tag type: "button", class: "btn btn-primary btn-xs", data: {toggle: "modal", target: "#share-modal", poll_id: user_poll.id} do %>
                <span class="glyphicon glyphicon-share" aria-hidden="true"></span>   Share
              <% end %></td>
            </tr>
          <% end %>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col-md-6">
      <h3>Friends</h3>
      <table class="table table-striped">
        <tbody>
          <% @user_friends.each do |friend| %>
            <tr>
              <td><%= link_to "#{friend.first_name} #{friend.last_name}", view_user_profile_path(friend.id) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<br><br><br><br><br><br>


<script>
    $(".MainBG").css("min-height",$(window).height()*.6);
    $(".MainBG").css("min-width",$(window).width());
    window.onresize = function(event) {
        resizeDiv();
    }
    function resizeDiv() {
        $(".MainBG").css("min-height",$(window).height()*.6);
        $(".jumbotron").css("min-width",$(window).width());
    }
</script>
