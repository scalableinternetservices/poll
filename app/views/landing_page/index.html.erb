<%= render 'share_modal' %>
<div class="container">
  <div class="row">
    <%= form_tag(root_path, :method => "get", id: "search-form") do %>
      <%= text_field_tag :search, params[:search], placeholder: "Search Polls" %>
      <%= submit_tag "Search" %>
    <% end %>
  </div>
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2">
      <p id="notice"><%= notice %></p>
      <h2>News Feed</h2>
      <div class="table-responsive" id="news-feed-polls">   
        <%= render 'news_feed_polls' %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2">
      <h2>Your Polls</h2>
      <div class="table-responsive" id="current-user-polls">   
        <%= render 'current_user_polls' %>
      </div>
    </div>
  </div>
  <br> <br>
  <div class="row">
    <div class="col-lg-2 col-lg-offset-2">
      <%= link_to "New poll", new_user_poll_path, :class => "btn btn-primary white center-block" %>
    </div>
  </div>
  <br>
  <div class="row">
    <div class="col-lg-2 col-lg-offset-2">
      <%= render "sign_in_out" %>
    </div>
  </div>
  <div class="row">         
    <div id="friends_pane">
      <%= render "friends_pane" %>
    </div>
  </div>
</div>
