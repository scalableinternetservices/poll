<%= render partial: "shared/navbar" %>
<%= render 'share_modal' %>
<div class="container-fluid HomeContainer">
  <div class="row">
    <div class="col-lg-8 col-lg-offset-1">
        <br><br>
        <div class="col-lg-10 col-lg-offset-1">
            <% if !notice.nil? %>
                <div class="alert alert-info " role="alert"><p id="notice"><%= notice %></p></div>
            <% end %>
        </div>
        
        <div class="row">
          <div class="col-lg-10 col-lg-offset-1">
              <div class="table-responsive" id="news-feed-polls">   
                <%= render 'news_feed_polls' %>
              </div>
          </div>
        </div>
        
        <div class="row">
          <div class="col-lg-10 col-lg-offset-1">
            <div class="table-responsive" id="current-user-polls">   
              <%= render 'current_user_polls' %>
            </div>
          </div>
        </div>
    </div>
    
    <div class="col-lg-3" style="background-color:#16a085">
      <br><br>
      <div id="friends_pane">
        <%= render "friends_pane" %>
      </div>
    </div>
  </div>
</div>

<script>
    $("HomeContainer").css("min-height",$(window).height()*2);
    window.onresize = function(event) {
        resizeDiv();
    }
    function resizeDiv() {
        $(".HomeContainer").css("min-height",$(window).height()*2);
    }
</script>