<div class="container contentContainer" id="one">
    <div class="row">
      <div class="col-lg-4 col-bg">
        <br>
        <%= image_tag "pollster_main_icon.png", :class => 'img-responsive' %>
        <h3><i>Join pollster to create, share, and vote on public surveys</i></h3>
        <h2>Log In</h2>
        <%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.email_field :email, autofocus: true, icon: "envelope"%>
          </div>
          
          <div class="field">
            <%= f.password_field :password, autocomplete: "off", icon:"user" %>
          </div>
          
          <% if devise_mapping.rememberable? -%>
            <div class="field">
              <%= f.check_box :remember_me %>
            </div>
          <% end -%>
          
          <div class="actions">
            <%= f.submit "Log in" %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
</div>

<script>
    $(".contentContainer").css("min-height",$(window).height());
    $(".contentContainer").css("min-width",$(window).width());
    $(".col-bg").css("min-height",$(window).height());
    window.onresize = function(event) {
        resizeDiv();
    }
    function resizeDiv() {
        $(".contentContainer").css("min-height",$(window).height());
        $(".contentContainer").css("min-width",$(window).width());
        $(".col-bg").css("min-height",$(window).height());
    }
</script>

